<div class="index-container">

  <h4>All deine Kuchen</h4>

  <div class="cards-container">
    <% @cakes.each do |cake| %>
    <%= link_to cake_path(cake) do %>
      <div class="card">
        <%= cl_image_tag("cake") %>
        <div class="info">
          <p> <%= cake.name %> </p>
          <p class="small-p"> <%= cake.time %> Minuten</p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <%= link_to "+", new_cake_path, class:"button-add", style:"font-weight: bolder; font-size: x-large" %>
  
</div>
   
