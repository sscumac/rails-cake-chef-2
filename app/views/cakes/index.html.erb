<div class="index-container">

  <h4>All deine Kuchen</h4>

  <div class="cards-container">
    <% @cakes.each do |cake| %>
    <%= link_to cake_path(cake) do %>
      <div class="card">
        <div class="image">
          <% if cake.photo.attached? %>
            <%= cl_image_tag cake.photo.key %>
          <% else %>
            <%= cl_image_tag("cake", height: 100, crop: :fill) %>
          <% end %>
        </div>
        <div class="info">
          <%= cake.name %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <%= link_to "neuer Kuchen", new_cake_path, class:"button-add" %>
  
</div>
   
